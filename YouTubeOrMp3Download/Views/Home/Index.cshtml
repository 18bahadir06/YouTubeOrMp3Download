@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>
<h2>YouTube to MP3 Converter</h2>

<form action="Convert" method="post">
    <div class="form-group">
        <label for="youtubeUrl">YouTube Link</label>
        <input type="text" class="form-control" id="youtubeUrl" name="youtubeUrl" placeholder="Enter YouTube link" required />
    </div>
    <button type="submit" class="btn btn-primary">Convert to MP3</button>
</form>

</main>